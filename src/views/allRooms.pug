html 
    include index.pug 
        title Rooms 
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ' crossorigin='anonymous')
        

    div(class="bg-gradient-warning" style="background-image: linear-gradient(to right, #FFC107, #FF9800);")
        div.container.my-5
            body(class="p-3 m-0 border-0 ")
                br
                br
                br
                br
                table.table
                    thead
                        tr
                        th(scope='col') Room #
                        th(scope='col') Extension 
                        th(scope='col') Number of beds
                        th(scope='col') Available beds 
                        th(scope='col')
                    each room in rooms 
                        tbody 
                            tr 
                            th(scope='row') #{room.roomNumber}
                            td #{room.extension}
                            td #{room.beds}
                            td #{room.availableBeds}
                            td 
                                a(class='text-danger' href='/rooms/edit/'+room.roomNumber) Edit