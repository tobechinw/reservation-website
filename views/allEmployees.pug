html 
    include index.pug

        title Employees 
        title Check In
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ' crossorigin='anonymous')
    
    div(class="bg-gradient-warning" style="background-image: linear-gradient(to right, #FFC107, #FF9800);")
        div.container.my-5
            body 
                br
                br
                br
                br
                table.table
                    thead
                        tr
                        th(scope='col') Shell ID
                        th(scope='col') Last name  
                        th(scope='col') First name
                        th(scope='col') Gender 
                        th(scope='col') Category 
                        th(scope='col') Department
                    each employee in employees 
                        tbody 
                            tr 
                            th(scope='row') #{employee.shellID}
                            td #{employee.lastname}
                            td #{employee.firstname}
                            td #{employee.gender}
                            td #{employee.category}
                            td #{employee.department}

