    body
      div(class="container")
          form(action="/rooms/delete-room", method="post")
              div(class="form-group")
                  label(for="room") 
                    strong Select employee: 
                  select(id="room", class="form-control", name="roomNumber")
                      each room in rooms
                          option(value=room.roomNumber) Room #{room.roomNumber}
              br
              button(type="submit" onclick='return confirm("Are you sure you want to delete this room?")' class="btn btn-primary btn-sm") 
                strong Submit
