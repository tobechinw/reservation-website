html
  include index.pug
    title Add Room
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ' crossorigin='anonymous')
    style.
      .my-style{
        font-size: 30px;
      }
  body
    br
    br
    br
    br
    br
    br
    div(class="container")
    
        form(action="/rooms/add-room", method="post")
            div(class="form-group")
                label(for="roomNum") 
                  strong Room Number:
                input(type="text", class="form-control" id="roomNum", name="roomNum", required)
            br

            div(class="form-group")
                label(for="extension")
                  strong Extension Number:
                input(type="text", class="form-control" id="extension", name="extension", required)
            br

            div(class="form-group")
                label(for="dropdown") 
                  strong Number of beds:   
                select(class="form-control" id="dropdown" name="beds")
                    option(value="1") 1
                    option(value="2") 2
                    option(value="3") 3
                    option(value="4") 4
                    option(value="5") 5
                    
            br


            button(type="submit" class="btn btn-primary btn-sm") 
              strong Submit