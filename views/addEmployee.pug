html
  include index.pug
    title Add Employee
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous")
  div.container.my-5
    br
    body
        div(class="container")
            form(action="/employees/add-employee", method="post", class="mt-5")
                div(class="form-group")
                    label(for="lastname") 
                        strong Last Name:
                    input(type="text", class="form-control", id="lastname", name="lastname", required, placeholder="Doe")
                br

                div(class="form-group")
                    label(for="firstname")
                        strong First Name:
                    input(type="text", class="form-control", id="firstname", name="firstname", required, placeholder="John")
                br

                div(class="form-group")
                    label(for="shellID") 
                        strong Shell ID:
                    input(type="text", class="form-control", id="shellID", name="shellID", required, placeholder="69170")
                br

                div(class="form-group")
                    label(for="category")
                        strong Category:
                    select(id="category", class="form-control", name="category")
                        option(value="SN") SN
                        option(value="CN") CN 
                        option(value="Expert") Expert
                        option(value="Regulator") Regulator 
                br

                div(class="form-group")
                    label(for="gender")
                        strong Gender:
                    select(id="gender", class="form-control", name="gender")
                        option(value="M") M
                        option(value="F") F 
                br
                
                div(class="form-group")
                    label(for="department")
                        strong Department: 
                    select(id="department", class="form-control" name="department")
                        option(value="Operations") Operations
                        option(value="Catering") Catering
                        option(value="Infrastructure") Infrastructure
                        option(value="Waste") Waste
                        option(value="IT") IT
                        option(value="Marine") Marine
                        option(value="Lab") Lab
                        option(value="Spy") Spy
                        option(value="Security") Security
                br

                button(type="submit" class="btn btn-primary btn-sm")
                    strong Submit
