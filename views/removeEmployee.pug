html
  include index.pug
    br
    br
    title Remove Employee 
    link(rel="stylesheet" href="../css/bootstrap.css")
  body
    div(class="container")
        form(action="/remove-employee", method="post")
            div(class="form-group")
                label(for="employee") Select employee: 
                select(id="employee", class="form-control", name="shellID")
                    each employee in employees
                        option(value=employee.shellID) #{employee.lastname} #{employee.firstname}

            button(type="submit" onclick='return confirm("Are you sure you want to remove employee? All their data will be lost.")' class="btn btn-primary btn-sm") Submit